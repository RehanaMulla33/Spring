<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<!-- bean definitions here -->
	
	<bean id="PassportServiceImpl"
		class="com.xworkz.passport.service.PassportServiceImpl">
		<constructor-arg ref="passportRepositoryImpl"></constructor-arg>

	</bean>

	<bean id="passportRepositoryImpl"
		class="com.xworkz.passport.repository.PassportRepositoryImpl">
		<constructor-arg
			ref="localContainerEntityManagerFactoryBean"></constructor-arg>

	</bean>
	<bean id="localContainerEntityManagerFactoryBean"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="driverManagerDataSource"></property>
	</bean>
	<bean id="driverManagerDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url"
			value="jdbc:mysql://localhost:3306/autoservice" />
		<property name="username" value="root" />
		<property name="password" value="Newyear@2021" />
		<property name="driverClassName" value="com.mysql.cj.jdbc.Driver"></property>
	</bean>

</beans>
